<!DOCTYPE html>
<html lang="is">
<head>
    <meta charset="utf-8">
    <link rel="stylesheet" href="styles.css">
    <link href="https://fonts.googleapis.com/css?family=Open+Sans|Source+Sans+Pro" rel="stylesheet">
</head>
<main>
    <div class="all">
        <form method="post" action="/apply">
            <div class="container-uppl">
                <h1>Atvinnuumsókn</h1>
                <div class="titles-answers">
                        <div class="div-info">
                            <label for="name">Nafn</label>
                            <% if (validRed.includes("name")) { %>
                                <input id="name" name="name" class="inputError" value="<%= name%>">
                            <% } else { %>
                                <input id="name" name="name" value="<%= name%>">
                            <% } %>
                        </div>
                        <div class="div-info">
                            <label for="email">Netfang</label>
                            <% if (validRed.includes("email")) { %>
                                <input id="email" name="email" class="inputError" value="<%= email%>">
                            <% } else { %>
                                <input id="email" name="email" value="<%= email%>">
                            <% } %>
                        </div>
                        <div class="div-info">
                            <label for="phone">Sími</label>
                            <% if (validRed.includes("phone")) { %>
                                <input id="phone" name="phone" class="inputError" value="<%= phone%>">
                            <% } else { %>
                                <input id="phone" name="phone" value="<%= phone%>">
                            <% } %>
                        </div>
                        <div class="div-info">
                            <label for="text">Kynning á þér:</label>
                            <% if (validRed.includes("text")) { %>
                                <textarea rows="4" cols="30" id="text" name="text" class="inputError" value="<%= text%>"></textarea>
                            <% } else { %>
                                <textarea rows="4" cols="30" id="text" name="text" value="<%= text%>"></textarea>
                            <% } %>
                        </div>
                </div>
            </div>

            <div class="container-starf">
                <h4>Starf sem sótt er um:</h4>
            </div>

            <% if (validRed.includes("job")) { %>
                <div class="div-job-error">
                        <input type="radio" name="job" value="forritari" <% if(job == 'forritari') {%> checked <%}%>><p>Forritari</p></div>
                <div class="div-job-error">
                    <input type="radio" name="job" value="honnudur" <% if(job == 'honnudur') {%> checked <%}%>><p>Hönnuður</p></div>
                <div class="div-job-error">
                    <input type="radio" name="job" value="verkefnastjori" <% if(job == 'verkefnastjori') {%> checked <%}%>><p>Verkefnastjóri</p></div>
            <% } else { %>
                <div class="div-job">
                    <input type="radio" name="job" value="forritari" <% if(job == 'forritari') {%> checked <%}%>><p>Forritari</p></div>
                    <div class="div-job">
                    <input type="radio" name="job" value="honnudur" <% if(job == 'honnudur') {%> checked <%}%>><p>Hönnuður</p></div>
                    <div class="div-job">
                    <input type="radio" name="job" value="verkefnastjori" <% if(job == 'verkefnastjori') {%> checked <%}%>><p>Verkefnastjóri</p></div>
            <% } %>

            <div class="error">
                    <% if(errors) { %>
                        <h4>Vandræði við að senda umsókn:</h4>
                        <ul>
                            <% errors.forEach((error) => { %>
                                <li><%= error.msg %></li>
                            <% }) %>
                        </ul>
                    <% } %>
            </div>


            <div class="applybtn">
                <button type="submit" class="apply">Senda umsókn</button>
            </div>
            <hr>
        </form>
        
        <form method="get" action="/applications">
            <div class="applicationsbtn">
                <button type="submit" class="umsoknir">Umsóknir</button>
            </div>
        </form>
    </div>
</main>
</html>